generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model FileType {
  id     Int         @id @default(autoincrement())
  name   String      @unique // file type: Contract, POH, IM, Invoice
  status Boolean
  builds FileBuild[] // <--- quan hệ 1-n: 1 FileType có nhiều FileBuild
}

model FileBuild {
  id              Int      @id @default(autoincrement())
  fileName        String
  numbers_created Int
  fileTypeId      Int
  fileType        FileType @relation(fields: [fileTypeId], references: [id])
}
